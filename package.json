{
  "name": "rem-em-calc",
  "version": "1.0.0",
  "description": "Simple tool for converting px to rem and em.",
  "keywords": [],
  "author": "Dusan Brankov",
  "license": "MIT",
  "main": "index.html",
  "browserslist": [
    "> 0.2% and not dead"
  ],
  "scripts": {
    "watch:browserify": "watchify ./src/js/main.js -o ./js/main.js -v",
    "watch:cssimport": "postcss ./src/css/main.css --use postcss-import --output ./css/main.css --watch --no-map",
    "build:browserify": "browserify ./src/js/main.js -o ./js/main.js",
    "build:uglifyjs": "echo $(npx uglifyjs js/main.js) > js/main.js",
    "build:cssimport": "postcss ./src/css/main.css --use postcss-import --output ./css/main.css --no-map",
    "build:postcss": "postcss ./css/main.css --use autoprefixer cssnano --replace --no-map",
    "start": "npm-run-all --parallel watch:*",
    "build": "npm-run-all build:browserify build:uglifyjs build:cssimport build:postcss"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.14",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "uglify-js": "^3.17.4",
    "watchify": "^4.0.0"
  },
  "dependencies": {
    "clipboard-copy": "^4.0.1"
  }
}
