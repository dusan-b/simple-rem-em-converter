{
  "name": "simple-rem-em-converter",
  "version": "1.0.0",
  "description": "A simple tool for converting px to rem and em.",
  "keywords": [
    "rem",
    "em",
    "px",
    "convert",
    "calculate"
  ],
  "author": "Dusan Brankov",
  "license": "MIT",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dusan-b/simple-rem-em-converter.git"
  },
  "bugs": {
    "url": "https://github.com/dusan-b/simple-rem-em-converter/issues"
  },
  "homepage": "https://dusan-b.github.io/simple-rem-em-converter",
  "browserslist": [
    "> 0.2% and not dead"
  ],
  "scripts": {
    "watch:cssimport": "postcss ./src/css/main.css --use postcss-import --output ./css/main.css --watch --no-map",
    "watch:uglifyjs": "onchange './src/js/*.js' -- npx uglifyjs ./src/js/main.js -o ./js/main.js",
    "build:uglifyjs": "uglifyjs ./src/js/main.js -o ./js/main.js",
    "build:cssimport": "postcss ./src/css/main.css --use postcss-import --output ./css/main.css --no-map",
    "build:postcss": "postcss ./css/main.css --use autoprefixer cssnano --replace --no-map",
    "start": "npm-run-all --parallel watch:*",
    "build": "npm-run-all build:uglifyjs build:cssimport build:postcss"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.14",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "uglify-js": "^3.17.4"
  }
}
